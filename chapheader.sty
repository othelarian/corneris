\ProvidesPackage{chapheader}

\RequirePackage{etoc}
\RequirePackage{boxedminipage}
\RequirePackage{fullminipage}

\newcounter{chapitre}

\makeatletter

\DeclareFixedFont{\chaptitfont}{T1}{pbk}{b}{n}{18pt}
\DeclareFixedFont{\chapnumfont}{T1}{pbk}{b}{n}{50pt}
\DeclareFixedFont{\chapfont}{T1}{phv}{b}{n}{24pt}

\DeclareFixedFont{\chaptxtfont}{T1}{pbk}{m}{it}{14pt}

\renewcommand{\chapter}{
    \cleardoublepage
    \stepcounter{chapitre}
    \thispagestyle{plain}
    \global\@topnum\z@
    \@afterindentfalse
    \secdef\@chapter\@schapter
}

\renewcommand{\@makechapterhead}[1]{
    \begin{boxedminipage}[lt]{.45\linewidth}
        {Sommaire}
        \localtableofcontents
    \end{boxedminipage}
    \begin{minipage}[rt]{.45\linewidth}
        \vspace{2cm}
        \begin{flushright}
            \chaptitfont\chaptertitlename\ 
            \chapnumfont\Roman{chapter}
            \linebreak
            \vspace{0.5cm}
            \linebreak
            {\chapfont#1}
            \linebreak
        \end{flushright}
    \end{minipage}
    \vspace{2cm}
}

\renewcommand{\@makeschapterhead}[1]{
}


\makeatother
